{
  "scope": "beyond-js",
  "name": "react-17-widgets",
  "version": "0.0.2",
  "license": "MIT",
  "description": "Create web projects as standalone microfrontends with beyondJS and React 17",
  "modules": {
    "path": "./"
  },
  "libraries": {
    "imports": [
      "@beyond-js/kernel",
      "@beyond-js/widgets"
    ]
  },
  "deployment": {
    "distributions": [
      {
        "name": "npm",
        "maps": "external",
        "npm": {
          "platforms": {
            "web": "web",
            "ssr": "ssr"
          }
        }
      },
      {
        "name": "web",
        "platform": "web",
        "ports": {
          "bundles": 9110
        },
        "ts": {
          "compiler": "tsc"
        }
      },
      {
        "name": "ssr",
        "platform": "ssr",
        "ports": {
          "bundles": 9111
        },
        "ts": {
          "compiler": "tsc"
        }
      }
    ]
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "@beyond-js/widgets": "~0.1.3",
    "@beyond-js/kernel": "~0.1.8"
  },
  "devDependencies": {
    "@types/react": "^17.0.52",
    "@types/react-dom": "^17.0.18"
  }
}
