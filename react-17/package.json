{
	"name": "@beyond-js/react-17-widgets",
	"version": "1.1.0",
	"description": "Create web projects as standalone microfrontends with beyondJS and React 17",
	"license": "MIT",
	"repository": "https://github.com/beyondjs/react-widgets",
	"modules": {
		"path": "./modules"
	},
	"deployment": {
		"distributions": [
			{
				"name": "npm",
				"maps": "external",
				"npm": {
					"platforms": {
						"web": "web",
						"ssr": "ssr"
					}
				}
			},
			{
				"name": "web",
				"platform": "web",
				"ports": {
					"bundles": 9110
				},
				"ts": {
					"compiler": "tsc"
				}
			},
			{
				"name": "ssr",
				"platform": "ssr",
				"ports": {
					"bundles": 9111
				},
				"ts": {
					"compiler": "tsc"
				}
			}
		]
	},
	"dependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"@beyond-js/widgets": "~1.1.0",
		"@beyond-js/kernel": "~0.1.8"
	},
	"devDependencies": {
		"@types/react": "^17.0.52",
		"@types/react-dom": "^17.0.18"
	}
}
